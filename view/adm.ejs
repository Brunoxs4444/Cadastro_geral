<body>

    <nav class="navbar navbar-expand-sm  navbar-dark test" >
        <div class="container-fluid">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/principal">CBV</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/adm">Clientes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/funcionarios">Funcionarios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/casas">Casas</a>
            </li>
            <li class="nav-item">
             <a class="nav-link" href="/reservas">Reservas</a>
            </li>
          
          </ul>
        </div>
      </nav>
      <div class="top1">
        <h2> Rotinas Administrativas</h2>
      </div>
      
      <div style="margin: 80px; padding:0;">
      <div> 
        <img src="/imgs/icons8-family.png" alt="imagem">
        <h4>Lista de Clientes</h4>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal" >Novo Cliente</button>

       <!--<p style="color:red;"> Cliente Cadastrado com Sucesso</p>-->
      </div>

      <table class="table table-striped" style="text-align:center;">
        <thead>
          <tr style="border-top:1px solid #ddd;" >
            <th>id</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th> Editar</th>
            <th>Deletar</th>
          </tr>
        </thead>
        <%
          for(var i = 0; i < data.length; i++){         
        %>
        
          <tr>
            <td><%=data[i].id %></td>
            <td><%=data[i].Nome %></td>
            <td><%=data[i].telefone %></td>
            <td><button style="background:black; color:white;" href="/editar" type="button" class="btn btn-primary" onclick="alert('Estamos em Desenvolvimento');">Editar</button></td>
            <td><button style="background:red; color:white;" href="/deletar" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModalDelete">Deletar</button></td>
          </tr>
          <%
            }
          %>
         
        </tbody>
      </table>

    </div>
     <!-- The Modal -->
     <div class="modal" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
    
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Novo Cliente</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
    
          <!-- Modal body -->
          <div class="modal-body">
            <form action="/cliente/cadastrar" method="post">
              <div class="form-group">
                <label for="text">Nome:</label>
                <input type="text" class="form-control" placeholder="Informe seu Name" id="text" name="nome">
              </div>
              <div class="form-group">
                <label for="tel">Telefone:</label>
                <input type="tel" class="form-control" placeholder="Informe seu Telefone" id="tel" name="telefone">
              </div>
          
              <button type="submit" class="btn btn-primary">Enviar</button>
            </form>
          </div>
    
        </div>
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
          </div>
    
      </div>

    </div>

    <!-- The Modal Editar -->
    <div class="modal fade" id="myModalEdite">
      <div class="modal-dialog">
        <div class="modal-content">
    
          <!-- Modal Header -->
          <div class="modal-header bg-dark text-light">
            <h4 class="modal-title">Editar Cliente</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
    
          <!-- Modal body -->
          <div class="modal-body">
            <form action="/cliente/editar" method="post">
              <div class="form-group">
                <label for="id">Id:</label>
                <input type="number" class="form-control" placeholder="Informe seu Id" id="id" name="id">
              </div>
              <div class="form-group">
                <label for="text">Nome:</label>
                <input type="text" class="form-control" placeholder="Informe seu Name" id="text" name="Nome">
              </div>
              <div class="form-group">
                <label for="tel">Telefone:</label>
                <input type="tel" class="form-control" placeholder="Informe seu Telefone" id="tel" name="telefone">
              </div>
              <button type="submit" class="btn btn-danger">Enviar</button>
              </div>
            </form>
    
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
          </div>
          
          </div>
          </div>
          </div>


           <!-- The Modal Delete -->
    <div class="modal fade" id="myModalDelete">
      <div class="modal-dialog">
        <div class="modal-content">
    
          <!-- Modal Header -->
          <div class="modal-header bg-dark text-light">
            <h4 class="modal-title">Deletar Cliente</h4>
            <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
          </div>
    
          <!-- Modal body -->
          <div class="modal-body">
            <form action="/cliente/deletar" method="post">
              <div class="form-group">
                <label for="id">Id:</label>
                <input type="number" class="form-control" placeholder="Informe seu Id" id="id" name="id">
              </div>
              <button type="submit" class="btn btn-danger">Deletar</button>
              </div>
            </form>
    
          <!-- Modal footer -->
          <div class="modal-footer">
            <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
          </div>
          
          </div>
          </div>
          </div>

           
    <footer>
      <a target="_blank" href="https://icons8.com/icon/YBnLg02jDKTj/family--man-girl-boy">Family  Man Girl Boy</a> icon by <a target="_blank" href="https://icons8.com">Icons8</a>
    </footer>
