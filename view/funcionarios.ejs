<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta http-equiv="X-UA-Compatible" content="IE=edge">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Funcionarios</title>
    <link rel="stylesheet" href="/view/style.css">
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/css/bootstrap.min.css" rel="stylesheet">
  <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.2.1/dist/js/bootstrap.bundle.min.js"></script>
 
</head>
<style>
  .top1{
    text-align: center;
    border: 50px solid #ddd;
    background: #ddd;
}

button{
    background: rgb(11, 142, 223);
    color: white;
    
}
.test{
  background-color: rgb(6, 37, 73);
}
</style>
<body>

    <nav class="navbar navbar-expand-sm test navbar-dark">
        <div class="container-fluid">
          <ul class="navbar-nav">
            <li class="nav-item">
              <a class="nav-link active" href="/principal">CBV</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/adm">Clientes</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/funcionarios">Funcionarios</a>
            </li>
            <li class="nav-item">
              <a class="nav-link" href="/casas">Casas</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/reservas">Reservas</a>
            </li>
          </ul>
        </div>
      </nav>
      <div class="top1">
        <h2> Rotinas Administrativas</h2>
      </div>
      
      <div style="margin: 80px; padding:0;">
      <div> 
        <img src="/imgs/icons16.png" alt="icons">
        <h4>Lista de Funcionarios</h4>
        <button type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModal">Novo Funcionario</button>
       <!--<p style="color:red;"> Cliente Cadastrado com Sucesso</p>-->
      </div>

      <table class="table table-striped" style="text-align:center;">
        <thead>
          <tr style="border-top:1px solid #ddd;" >
            <th>id</th>
            <th>Nome</th>
            <th>Telefone</th>
            <th>cpf</th>
            <th> Editar</th>
            <th>Deletar</th>
          </tr>
        </thead>
        <tbody>
        <%
        for(var i = 0; i < data.length; i++){         
        %>
          <tr>
            <th><%=data[i].id %></th>
            <th><%=data[i].nome %></th>
            <th><%=data[i].telefone %></th>
            <th><%=data[i].cpf %></th>
            <th><button style="background:black; color:white;" href="/editar" type="button" class="btn btn-primary" onclick="alert('Estamos em Desenvolvimento');">Editar</button></th>
            <th><button style="background:red; color:white;" href="/deletar" type="button" class="btn btn-primary" data-bs-toggle="modal" data-bs-target="#myModalDelete">Deletar</button></th>
          </tr>
          <%
            }
          %>
         
        </tbody>
      </table>

    </div>
    <!-- The Modal -->
    <div class="modal" id="myModal">
      <div class="modal-dialog">
        <div class="modal-content">
    
          <!-- Modal Header -->
          <div class="modal-header">
            <h4 class="modal-title">Novo Funcionario</h4>
            <button type="button" class="close" data-dismiss="modal">&times;</button>
          </div>
    
          <!-- Modal body -->
          <div class="modal-body">
            <form action="/funcionarios/cadastrar" method="post">
              <div class="form-group">
                  <label for="text">Nome:</label>
                  <input type="text" class="form-control" placeholder="Enter Name" id="text" name="nome">
                </div>
                <div class="form-group">
                  <label for="tel">Telefone:</label>
                  <input type="tel" class="form-control"  placeholder="Informe seu Telefone" id="tel" name="telefone">
                </div>
                <div class="form-group">
                  <label for="tel">CPF:</label>
                  <input type="text" class="form-control"  placeholder="Informe seu Telefone" id="tel" name="cpf">
                </div>
                <button type="submit" class="btn btn-primary">Enviar</button>
              </div>
               
              </form>
            </div>
            
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-dismiss="modal">Close</button>
            </div>
            
          </div>
        </div>
      </div>

      <!-- The Modal Delete -->
      <div class="modal fade" id="myModalDelete">
        <div class="modal-dialog">
          <div class="modal-content">
      
            <!-- Modal Header -->
            <div class="modal-header bg-dark text-light">
              <h4 class="modal-title">Deletar Cliente</h4>
              <button type="button" class="btn-close" data-bs-dismiss="modal"></button>
            </div>
      
            <!-- Modal body -->
            <div class="modal-body">
              <form action="/funcionarios/deletar" method="post">
                <div class="form-group">
                  <label for="id">Id:</label>
                  <input type="number" class="form-control" placeholder="Informe seu Id" id="id" name="id">
                </div>
                <button type="submit" class="btn btn-danger">Deletar</button>
                </div>
              </form>
      
            <!-- Modal footer -->
            <div class="modal-footer">
              <button type="button" class="btn btn-danger" data-bs-dismiss="modal">Close</button>
            </div>
            
            </div>
            </div>
            </div>
      
      <footer>
        <a target="_blank" href="https://icons8.com/icon/118632/macho-de-configura%C3%A7%C3%B5es-de-admin">admin</a> icon by <a target="_blank" href="https://icons8.com">Icons8</a>
      </footer>
      
</body>
</html>